/** page ordertable **/
.container {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  padding-top: 50px;
  background-color: transparent; /* 不要覆盖背景图 */
}
.bg {
  position: fixed;         /* fixed 而非 absolute */
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 0;              /* 比内容低即可 */
}
.order-form {
  width: 90%;
  max-width: 600px;
  background: rgba(255,255,255,0.9);
  padding: 20px;
  border-radius: 8px;
}

.title {
  font-size: 24px;
  text-align: center;
  margin-bottom: 16px;
  font-weight: bold;
}

.table-images {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.table-image {
  width: 48%;
  height: 120px;
  border-radius: 8px;
}

.field {
  margin-bottom: 16px;
}

.label {
  display: block;
  font-weight: bold;
  margin-bottom: 6px;
}

.input {
  width: 100%;
  height: 36px;
  padding: 6px 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.radio-group {
  display: flex;
  justify-content: space-around;
}

.picker {
  line-height: 36px;
  padding: 0 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.btn-submit {
  width: 100%;
  height: 40px;
  background-color: #3498db;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 18px;
}

.success {
  display: block;
  color: #27ae60;
  text-align: center;
  margin-top: 12px;
}

.error {
  display: block;
  color: #e74c3c;
  text-align: center;
  margin-top: 12px;
}

.btn-redirect {
  width: 100%;
  height: 40px;
  background-color: #2ecc71;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  margin-top: 12px;
}
