.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f0f4ff;
  position: relative;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  color: #333;
}

.map-view {
  width: 100%;
  height: 40vh;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.12);
  filter: drop-shadow(0 2rpx 8rpx rgba(0,0,0,0.1));
  transition: transform 0.3s ease;
}

.list-wrapper {
  flex: 1;
  overflow-y: auto;
  padding: 28rpx 24rpx 40rpx;
  background: #f0f4ff;
  scrollbar-width: thin;
  scrollbar-color: #a0a9cc transparent;
}

/* 自定义滚动条（仅微信webview支持有限） */
.list-wrapper::-webkit-scrollbar {
  width: 6rpx;
}
.list-wrapper::-webkit-scrollbar-thumb {
  background-color: #a0a9cc;
  border-radius: 3rpx;
}

.store-item {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 22rpx;
  padding: 24rpx 24rpx 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.06);
  transition:
    box-shadow 0.35s ease,
    transform 0.35s ease,
    border-left-color 0.35s ease;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  user-select: none;
}
.store-item:hover,
.store-item-hover {
  box-shadow: 0 18rpx 32rpx rgba(0, 122, 255, 0.2);
  transform: translateY(-6rpx);
}
.store-item.active {
  box-shadow: 0 22rpx 38rpx rgba(0, 122, 255, 0.35);
  border-left: 8rpx solid #007aff;
  transform: translateY(-6rpx);
}

.store-info {
  margin-bottom: 18rpx;
}

.store-name {
  font-weight: 800;
  font-size: 34rpx;
  color: #111e3c;
  margin-bottom: 10rpx;
  letter-spacing: 0.8rpx;
}

.store-contact {
  display: flex;
  justify-content: flex-start;
  gap: 48rpx;
  font-size: 28rpx;
  color: #6677aa;
}

.phone, .distance {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.order-btn {
  align-self: flex-start;
  background: linear-gradient(135deg, #a3c4f3, #7da9f7);
  color: #ffffffdd;
  padding: 14rpx 54rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 36rpx;
  box-shadow: 0 6rpx 16rpx rgba(125, 169, 247, 0.35);
  border: none;
  outline: none;
  user-select: none;
  transition: background 0.3s ease, box-shadow 0.3s ease;
  letter-spacing: 0.8rpx;
}

.order-btn:hover,
.order-btn-hover {
  background: linear-gradient(135deg, #8ab3f5, #a7c0f9) !important;
  box-shadow: 0 10rpx 24rpx rgba(125, 169, 247, 0.55);
}


.loading {
  text-align: center;
  color: #999;
  margin-top: 80rpx;
  font-size: 28rpx;
  font-weight: 500;
}
