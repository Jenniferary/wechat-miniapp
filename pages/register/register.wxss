.page {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
  font-family: 'PingFang SC', sans-serif;
}

.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -2;
}

.overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0.4);
  z-index: -1;
}

.header {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 120rpx;
  margin-bottom: 20rpx;
}

.main-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.sub-title {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.card {
  margin-top: 60rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding: 40rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-top: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #444;
  margin-bottom: 10rpx;
  display: block;
}

.input {
  width: 100%;
  padding: 18rpx;
  font-size: 28rpx;
  border: 1px solid #ddd;
  border-radius: 14rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.login-btn {
  margin-top: 40rpx;
  width: 100%;
  padding: 20rpx 0;
  font-size: 32rpx;
  background-color: #ff6b00;
  color: white;
  border-radius: 20rpx;
  border: none;
}

.register-link {
  margin-top: 30rpx;
  text-align: center;
  color: #888;
  font-size: 24rpx;
}
