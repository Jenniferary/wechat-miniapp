/* 背景图模糊遮罩 */
.bg {
  position: fixed;
  top: 0; left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  object-fit: cover;
  filter: blur(6px) brightness(0.92);
}

.overlay {
  position: fixed;
  inset: 0;
  background: rgba(255, 255, 255, 0.25);
  z-index: 0;
}

.content {
  position: relative;
  z-index: 1;
  padding: 32rpx;
}

/* 卡片样式 */
.order-card {
  background: rgba(255, 255, 255, 0.88);
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
}

/* 行 */
.order-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.label {
  color: #666;
  font-weight: 600;
}

.value {
  color: #2d3436;
  font-weight: 500;
  max-width: 60%;
  text-align: right;
  word-break: break-word;
}

/* 星级选择 */
.star-picker {
  display: flex;
  gap: 10rpx;
}
.star {
  width: 36rpx;
  height: 36rpx;
}
.star.inactive {
  filter: grayscale(100%) opacity(0.4);
}

/* 评论输入框 */
input {
  width: 100%;
  background: #f1f2f6;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: none;
  color: #2f3640;
}

/* 提交按钮 */
.pay-btn {
  margin-top: 30rpx;
  width: 100%;
  background: linear-gradient(135deg, #0984e3, #74b9ff);
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 16rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(9, 132, 227, 0.4);
  transition: transform 0.2s ease;
}

.pay-btn:active {
  transform: scale(0.97);
}

.empty {
  font-size: 30rpx;
  text-align: center;
  color: #999;
  padding: 160rpx 20rpx;
}
/* 自定义 TabBar 样式优化 */
.tabbar {
  position: fixed; 
  bottom: 0; left: 0; right: 0;
  height: 60px;
  display: flex;
  border-top: 1px solid #ddd;
  background: #fff;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding-top: 6px;
}

.tab-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
}

.tab-item text {
  display: block;
  font-size: 12px;
  color: #666;
}

.tab-item text.active {
  color: #3498db;
  font-weight: bold;
}