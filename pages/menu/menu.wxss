.page {
  width: 100vw;
  min-height: 100vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  filter: blur(2px) brightness(0.98);
}

.header-banner {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.poster-swiper {
  width: 100%;
  height: auto;
  aspect-ratio: 3 / 1;
}

.poster-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 0 0;
  box-sizing: border-box;
  margin-top: 16px;
}

.main {
  display: flex;
  gap: 12px;
  margin-bottom: 24px;
}

.sidebar {
  width: 96px;
  height: 510px;
  flex-shrink: 0;
  background: #fff;
  border-radius: 3px;
  padding: 8px 0;
  position: sticky;
  top: 100px;
  align-self: flex-start;
  z-index: 20;
}

.menu-item {
  padding: 12px 8px;
  text-align: center;
}

.menu-link {
  color: #666;
  font-size: 14px;
  padding: 8px 6px;
  border-radius: 10px;
  transition: background 0.2s;
  display: block;
}

.menu-link.active {
  background-color: #ffefe5;
  color: #fa541c;
  font-weight: bold;
}

.menu-list {
  flex: 1;
  padding-bottom: 160px;
  max-height: 70vh;
  overflow-y: auto;
}

.dish-card {
  display: flex;
  background: #fff;
  border-radius: 16px;
  margin-bottom: 16px;
  padding: 12px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);
  transition: transform 0.1s;
}

.dish-card:hover {
  transform: translateY(-2px);
}

.dish-img {
  width: 80px;
  height: 80px;
  border-radius: 12px;
  object-fit: cover;
}

.dish-content {
  margin-left: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.dish-name {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.dish-price {
  font-size: 14px;
  color: #fa541c;
  margin-top: 4px;
}

.dish-actions {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-top: 6px;
}

.btn {
  width: 28px;
  height: 28px;
  text-align: center;
  line-height: 28px;
  border-radius: 50%;
  background: #f5f5f5;
  color: #333;
  font-size: 18px;
  font-weight: 500;
}

.cart-fullwidth {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #ffffffee;
  padding: 16px;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(4px);
  z-index: 99;
}

.cart-title {
  font-weight: 600;
  font-size: 18px;
  margin-bottom: 8px;
}

.cart-item {
  font-size: 16px;
  margin-bottom: 4px;
}

.total {
  margin-top: 12px;
  font-size: 16px;
  text-align: left; 
  padding-left: 8px; 
}

.total .price {
  color: #fa541c;
  font-weight: bold;
}


.cart-buttons {
  display: flex;
  gap: 12px;
  margin-top: 12px;
}

.cart-btn {
  flex: 1;
  background: #fa541c;
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 10px;
  font-size: 15px;
  transition: background 0.2s;
}
.dish-stock {
  font-size: 13px;
  color: #999;
  margin-top: 2px;
}

