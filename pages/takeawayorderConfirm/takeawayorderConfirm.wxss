.bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  filter: blur(2px) brightness(0.96);
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30px 16px;
  min-height: 100vh;
}

.checkout-form {
  background: rgba(255, 255, 255, 0.95);
  padding: 32px 24px;
  border-radius: 18px;
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  width: 80%;
  max-width: 480px;
}

.form-title {
  font-size: 24px;
  font-weight: bold;
  color: #2d3436;
  text-align: center;
  margin-bottom: 28px;
}

.section {
  margin-bottom: 22px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 12px;
  color: #2f3542;
}

.item {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #f1f2f6;
}

.item-name {
  font-size: 15px;
  color: #000000;
}

.item-price {
  font-size: 15px;
  color: #2d3436;
}

.empty-tip {
  font-size: 14px;
  color: #aaa;
  text-align: center;
  padding: 10px 0;
}

.price {
  font-size: 20px;
  color: #e17055;
  font-weight: bold;
}

.picker {
  padding: 10px 12px;
  background: #f5f6fa;
  border-radius: 10px;
  font-size: 16px;
  border: 1px solid #dcdde1;
  color: #2f3640;
}

.input {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #dcdde1;
  border-radius: 10px;
  background-color: #f5f6fa;
  font-size: 16px;
  color: #2f3640;
}

.submit-btn {
  width: 100%;
  padding: 14px;
  font-size: 18px;
  font-weight: bold;
  background: linear-gradient(to right, #74b9ff, #0984e3);
  color: white;
  border: none;
  border-radius: 12px;
  box-shadow: 0 4px 14px rgba(9,132,227,0.3);
  transition: 0.25s ease;
}

.submit-btn:active {
  background: #0984e3;
}
.form-group {
  margin: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.form-group text {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  color: #333;
}

textarea {
  width: 100%;
  box-sizing: border-box; /* 保证内边距不会撑出外层 */
  border: 1px solid #ccc;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  line-height: 40rpx;
  min-height: 120rpx;
  resize: none;
}

