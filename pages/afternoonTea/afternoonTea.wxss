.page {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  overflow: hidden;
  position: relative;
}

.bg {
  position: fixed;
  top: 0; left: 0;
  width: 100vw; height: 100vh;
  z-index: -1;
  filter: blur(2px) brightness(0.97);
}

.header-banner {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.poster-swiper {
  width: 100%;
  height: auto;
  aspect-ratio: 3 / 1;
}

.poster-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}


.content-row {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.sidebar {
  width: 100px;
  background: #fff;
  padding: 8px 0;
  box-sizing: border-box;
  border-right: 1px solid #eee;
}

.menu-link {
  display: block;
  text-align: center;
  padding: 10px;
  color: #666;
  font-size: 14px;
}

.menu-link:hover,
.menu-link.active {
  background: #ffefe5;
  color: #fa541c;
  font-weight: bold;
}

.menu-list {
  flex: 1;
  padding: 12px;
  overflow-y: auto;
}

.category-section {
  margin-bottom: 24px;
}

.category-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 12px;
  padding-left: 8px;
  border-left: 4px solid #fa541c;
}

.dish-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.dish-card {
  width: 46%;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.05);
  overflow: hidden;
}

.dish-card-img {
  width: 100%;
  height: 120px;
  object-fit: cover;
}

.dish-card-name {
  font-size: 14px;
  padding: 10px 8px;
  text-align: center;
}

.cart-fullwidth {
  background: #ffffffee;
  padding: 16px;
  backdrop-filter: blur(4px);
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.cart-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
}

.cart-item {
  font-size: 16px;
  margin-bottom: 6px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.num-input {
  width: 60px;
  height: 36px;
  border: 1px solid #ccc;
  border-radius: 8px;
  text-align: center;
  font-size: 14px;
}

.cart-buttons {
  margin-top: 12px;
  text-align: center;
}

.cart-btn {
  background: #fa541c;
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 12px;
  font-size: 16px;
}