.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.content {
  flex: 1;
  position: relative;
}

.scroll-container {
  height: calc(100vh - 60px);
  overflow-y: scroll;
  background-color: #f5f5f5;
}

.header-bg {
  width: 100%;
  height: 300rpx;
}

.header-content {
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.greeting {
  color: rgb(17, 5, 5);
  font-size: 26px;
  font-weight: bold;
}

.subtitle {
  color: rgb(29, 11, 11);
  font-size: 16px;
  margin-top: 12rpx;
}

.home-cards {
  margin: 40rpx 20rpx;
  display: flex;
  justify-content: space-between;
}

.card {
  width: 48%;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.card-icon {
  width: 68rpx;
  height: 68rpx;
  margin-bottom: 12rpx;
}

.label {
  font-size: 16px;
  color: #333;
}

.poster-list {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.poster-link {
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.poster-img {
  width: 100%;
  display: block;
}

.empty {
  margin: 50px;
  text-align: center;
  color: #999;
}

.tabbar {
  position: absolute;
  bottom: 0; left: 0; right: 0;
  height: 60px;
  display: flex;
  border-top: 1px solid #ddd;
  background: #fff;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding-top: 6px;
}

.tab-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
}

.tab-item text {
  display: block;
  font-size: 12px;
  color: #666;
}

.tab-item text.active {
  color: #3498db;
  font-weight: bold;
}
.store-selector {
  margin: 20rpx auto 0 auto;
  padding: 20rpx 30rpx;
  width: 80%;
  background-color: #ffffff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.location-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.location-text {
  color: rgb(0, 0, 0);
  font-size: 30rpx;
  font-weight: bold;
}
